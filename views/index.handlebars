{{#each notes}}
<div class="card mb-3">
    <div class="card-body">
        <h3 class="card-title">{{title}}</h3>
            <p>{{details}}</p>
            <a class="btn btn-dark btn-block mb-2" href="/edit/{{id}}" >Edit</a>  
        <form action="/edit/{{id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger btn-block" type="submit">DELETE</button>
        </form>      
    </div>
</div>
{{else}}

{{/each}}